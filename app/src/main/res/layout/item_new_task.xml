<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


        <ImageView
                android:id="@+id/task_new_choice"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:src="@mipmap/choice_not_address"/>

        <View
                android:layout_width="1dp"
                android:id="@+id/view_1"
                android:background="#dddddd"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/task_new_choice"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/task_create_number"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/view_1"
                android:gravity="center"
                android:padding="5dp"
                android:text="新建"
                android:textSize="14sp"/>

        <View
                android:layout_width="1dp"
                android:id="@+id/view_2"
                android:background="#dddddd"
                android:layout_toRightOf="@+id/task_create_number"
                android:layout_height="match_parent"/>

        <EditText
                android:id="@+id/task_create_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/view_2"
                android:background="@null"
                android:padding="8dp"
                android:gravity="center"
                android:hint="请输入推流地址"
                android:textSize="14sp"/>
    </RelativeLayout>

</LinearLayout>